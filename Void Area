import java.util.Scanner;
import javax.swing.JOptionPane;

public class VoidDoors {

    Scanner keyboard = new Scanner(System.in);
    
    public static void main(String[] args) {
        String answer = "y";
        //String answer2 = "n";
       
        answer = JOptionPane.showInputDialog("Are there any doors or windows needed?");
        if(answer.equals("y"))
        {
            showOptions();
        }
        else
        {
            JOptionPane.showMessageDialog(null,"Placeholder");
        }
       
       
    }
    public static void showOptions()
    {
    String input;
    double voidWidth;
    double voidHeight;
    double voidLength = 0;
   
    // Prompt the user to enter the desired doorframe width
    input = JOptionPane.showInputDialog("Enter width of doorframe: ");
    
    // Convert string to double
    voidWidth = Double.parseDouble(input);    
    
        
    // Prompt the user to enter the desired brick height
    input = JOptionPane.showInputDialog("Enter the height of doorframe: ");
    
    // Convert string to double
    voidHeight = Double.parseDouble(input);
    
    
    boolean stop = false;    
    while(!stop) 
    {
    // Prompt the user to enter the desired doorframe length
    input = JOptionPane.showInputDialog("Enter the length of the doorframe: ");
    
    // Convert string to double
    voidLength = voidLength + Double.parseDouble(input);
    
    input = JOptionPane.showInputDialog("Do you want to enter the length of another doorframe? (yes/no): ");
    if(input.equals("no")) 
    {
        stop = true;
    }
    }

    // Display Information
    JOptionPane.showMessageDialog(null,"Height: " + voidHeight + "\nWidth: " 
    + voidWidth + "\nLengh: " + voidLength);
        

    }
    }
