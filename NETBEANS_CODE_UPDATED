package brickblockcalc;
import javax.swing.JOptionPane;
public class BrickBlockCalc {
    public static void main(String[] args) {
        System.out.println("Powering On...\n\n\n\n");
        //JUMPS TO METHOD TO GET WHATEVER COMES FIRST
        getBrick();
    }
    public static void getBrick () {
        String input;
        String[] option = null;
        input = JOptionPane.showInputDialog(/*EDIT TEXT TO SHOW ALL BRICK DIMENSIONS*/"What bricks do you plan on using?");
        try {
            int menuOption = Integer.parseInt(input);
            //switch statement applies the variable for BRICK to chosen brick dimensions
            if (menuOption > 0 && menuOption < 6){
                    option = new String[menuOption];
                //<editor-fold defaultstate="collapsed" desc="BrickOptions">
                switch (menuOption){
                    case 1:
                        //EXAMPLE ONLY
                        double bl = 2, bw = 2, bh = 2;
                        break;
                    case 5:
                        break;
                }
                //</editor-fold>
            }
            else {
                JOptionPane.showMessageDialog(null, "Your input was invalid\nPlease type a number 1-#");
            }
        } catch (NumberFormatException e) {
            JOptionPane.showMessageDialog(null, "Your input was invalid\nPlease type a number 1-#");
        }
        wallMeasurements();
    }   
    
    public static void wallMeasurements() {
        String input;
        double wallWidth = 0;
        double wallHeight = 0;
        double wallLength = 0;

        input = JOptionPane.showInputDialog("Enter the width of the desired wall: ");
        wallWidth = Double.parseDouble(input);    

        input = JOptionPane.showInputDialog("Enter the height of the desired wall: ");
        wallHeight = Double.parseDouble(input);

        boolean stop = false;    
        while(!stop) {
        input = JOptionPane.showInputDialog("From corner to corner, Enter the length of the desired wall: ");
        wallLength = wallLength + Double.parseDouble(input);

        input = JOptionPane.showInputDialog("Do you want to enter the length of another wall? (yes/no): ");
        if(input.equals("no"))
            stop = true;
        }

        JOptionPane.showMessageDialog(null,"Height: " + wallHeight + "\nWidth: " 
        + wallWidth + "\nLengh: " + wallLength);
    }
    
    public static void VoidDoors() {
        String answer = "y";
        //String answer2 = "n";
       
        answer = JOptionPane.showInputDialog("Are there any doors or windows needed?");
        if(answer.equals("y"))
        {
            showOptions();
        }
        else
        {
            JOptionPane.showMessageDialog(null,"Placeholder");
        }
       
       
    }
    public static void showOptions()
    {
    String input;
    double voidWidth;
    double voidHeight;
    double voidLength = 0;
   
    // Prompt the user to enter the desired doorframe width
    input = JOptionPane.showInputDialog("Enter width of doorframe: ");
    
    // Convert string to double
    voidWidth = Double.parseDouble(input);    
    
        
    // Prompt the user to enter the desired brick height
    input = JOptionPane.showInputDialog("Enter the height of doorframe: ");
    
    // Convert string to double
    voidHeight = Double.parseDouble(input);
    
    
    boolean stop = false;    
    while(!stop) 
    {
    // Prompt the user to enter the desired doorframe length
    input = JOptionPane.showInputDialog("Enter the length of the doorframe: ");
    
    // Convert string to double
    voidLength = voidLength + Double.parseDouble(input);
    
    input = JOptionPane.showInputDialog("Do you want to enter the length of another doorframe? (yes/no): ");
    if(input.equals("no")) 
    {
        stop = true;
    }
    }

    // Display Information
    JOptionPane.showMessageDialog(null,"Height: " + voidHeight + "\nWidth: " 
    + voidWidth + "\nLengh: " + voidLength);
        

    }
}
