import javax.swing.JOptionPane;
import java.text.DecimalFormat;

public class Brick_Calculation_Method {

    
    public static void main(String[] args) {
        ShowCalculation();
        
    }
    public static void ShowCalculation()
    {
        DecimalFormat formatter = new DecimalFormat("#,##0.00");
        double voidWidth = 10;
        double voidLength = 15;
        double voidHeight = 10;
        double voidArea = voidWidth * voidLength * voidHeight;
        JOptionPane.showMessageDialog(null, "This is the void area calculation\n"
                + voidArea);
        
        double wallWidth = 23;
        double wallLength = 10;
        double wallHeight = 10;
        double wallArea  = wallWidth * wallLength * wallHeight;
        JOptionPane.showMessageDialog(null, "This is the wall area calculation\n"
                + wallArea);
        
        double brickWidth = 3;
        double brickLength = 15;
        double brickHeight = 5;
        double brickArea = brickWidth * brickLength * brickHeight;
        JOptionPane.showMessageDialog(null, "This is the brick area calculation\n"
                + brickArea);
        
        double trueArea = wallArea - voidArea;
        JOptionPane.showMessageDialog(null, "This is the true area calculation\n"
                + trueArea);
        
        double totBricks = trueArea/brickArea;
        JOptionPane.showMessageDialog(null, "This is the true brick area calculation\n"
                + formatter.format(totBricks));
    }
    
}
